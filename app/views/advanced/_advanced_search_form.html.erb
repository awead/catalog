<%= form_tag catalog_index_path, :class => "advanced", :method => :get do  %>

  <%= search_as_hidden_fields(:params => advanced_search_context ) %>

  <%= content_tag :legend, "Enter Search Terms" %>

  <%= content_tag :p do %>
    Find items that match
    <%= select_tag(:op, options_for_select({"all"=>"AND","any"=>"OR"}.sort,"all"), :class => "span2 dropdown inline") %> 
    of the fields below:
  <% end %>

  <%= content_tag :div, :id => "advanced_search" do %>
    <%= render "advanced/advanced_search_fields" %>
  <% end %>

  <%= content_tag :legend, "Choose Facets" %>

  <%= content_tag :p do %>
    Find items that match above terms <%= content_tag :strong, "and" %> have these attributes:
  <% end %>

  <%= content_tag :div, :id => "advanced_search_facets", :class => "limit_input" do %>
    <%= render "advanced_search_facets" %>
  <% end %>

  <% unless (search_context_str = render_search_to_s(advanced_search_context)).blank? %>
    <%= content_tag :div, :class => "constraints" do %>
      <%= content_tag :h4, "Within search:" %>
      <%= search_context_str %>
    <% end %>
  <% end %>

  <%= content_tag :legend, "Sorting" %>

  <%= content_tag :p do %>
    Sort results by
    <%= select_tag(:sort, options_for_select(sort_fields, h(params[:sort])), :class => "span3 dropdown inline") %>
  <% end %>

  <%= hidden_field_tag(:search_field, blacklight_config.advanced_search[:url_key]) %>

  <%= content_tag :div, :class => "pull-right" do %>
    <%= submit_tag "Search", :class => "btn btn-primary" %>
    <%= link_to "Start over", {:controller => "advanced", :action => "index"}, :class => "btn" %>
  <% end %>

<% end %>
