<%= form_tag search_action_url, :method => :get, :class => "navbar-form pull-left" do %>
  <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8)) %>

  <% unless search_fields.empty? %>
    <%= content_tag :label, t("blacklight.search.form.search_field.label"), :for => "search_field", :class => "hidden" %>
    <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t("blacklight.search.form.search_field.title") ) %>
    <%= content_tag :span, t("blacklight.search.form.search_field.post_label"), :class => "hidden" %>
  <% end %>

  <%= content_tag :label, t("blacklight.search.form.q"), :for => "q", :class => "hidden" %>
  <%= text_field_tag :q, params[:q], :placeholder => t("blacklight.search.form.q"), :class => "search-query q", :id => "q", :autofocus => should_autofocus_on_search_box? %>
  <%= button_tag t("blacklight.search.form.submit").html_safe, :class => "btn btn-primary search-btn", :id => "search" %>
<% end %>
