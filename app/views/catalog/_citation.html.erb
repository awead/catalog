<% @documents.each do |document| %>

  <%= content_tag :h4, document_heading(document) %>

  <% if document.respond_to?(:export_as_mla_citation_txt) %>
    <%= content_tag :legend, t('blacklight.citation.mla') %>
    <%= content_tag :p, document.send(:export_as_mla_citation_txt).html_safe %>
  <% end %>

  <% if document.respond_to?(:export_as_apa_citation_txt) %>
    <%= content_tag :legend, t('blacklight.citation.apa') %>
    <%= content_tag :p, document.send(:export_as_apa_citation_txt).html_safe %>
  <% end %>

<% end %>
