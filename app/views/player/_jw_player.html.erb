<div id='container'>The player will be placed here</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js">
</script>

<%= javascript_tag do %>

  var flashvars = {
    file: '<%= File.join(@document[:id].gsub(/:/,"_"),"data",@document[:access_file_s]) %>',
    streamer:'rtmp://bernie.rockhall.org/vod'
  };

  swfobject.embedSWF('<%= root_path %>jwplayer/player.swf','container','211','118','9.0.115','false', flashvars,

   {allowfullscreen:'true',allowscriptaccess:'always'},
   {id:'jwplayer',name:'jwplayer'}

  );

<% end %>
