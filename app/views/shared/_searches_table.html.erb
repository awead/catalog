<%= content_tag :table, :class => "table table-striped table-condensed search_history" do %>
  <% @searches.each_with_index do |search,index| %>
    <%= content_tag :tr, :id => "document_#{index + 1}" do %>
      <%= content_tag :td, link_to_previous_search(search.query_params), :class => "query" %>
      <%= content_tag :td, render_save_or_clear_link(search), :class => "actions" if has_user_authentication_provider? %>
    <% end %>
  <% end %>
<% end %>
