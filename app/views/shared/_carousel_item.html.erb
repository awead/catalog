<% Dir.glob(File.join(Rails.root.to_s, "app/assets/images/slides/*.jpg")).each do |image| %>
  
  <% file = File.basename(image) %>
  <%= content_tag :div, :class => carousel_item_class(file) do %>
    <%= link_to image_tag("slides/#{File.basename(file)}"), slide_link(file) %>
  <% end %>

<% end %>
