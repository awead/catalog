<%= render "shared/header" %>
<%= content_tag :nav, :class => "navbar navbar-inverse navbar-static-top", :role => "navigation" do %>
  <%= content_tag :div, :class => "container navbar-container" do %> 
    <!-- Toggle button to show menu on mobile device -->
    <%= content_tag :div, :class => "navbar-header" do %>
      <%= content_tag :button, :type => "button", :class => "navbar-toggle",
                      :data => { :toggle => "collapse", :target => "#catalog_navbar" } do %>
        <%= content_tag :span, "Toggle navigation", :class => "sr-only" %>
        <%= content_tag :span, nil, :class => "glyphicon glyphicon-question-sign white" %>
      <% end %>

      <% if params[:action].match("show") %>
        
        <%= content_tag :button, :type => "button", :class => "navbar-toggle",
                        :data => { :toggle => "collapse", :target => "#record_controls" } do %>
          <%= content_tag :span, "More information", :class => "sr-only" %>
          <%= content_tag :span, nil, :class => "glyphicon glyphicon-info-sign white" %>
        <% end %>
        
        <%= render_next_document_mobile_link %>
        <%= render_mobile_link_back_to_catalog %>
        <%= render_previous_document_mobile_link %>

      <% end %>

    <% end %>

    <%= content_tag :div, :class => "collapse navbar-collapse", :id => "catalog_navbar" do %>
      <%= content_tag :div, :class => "col-lg-8 col-md-7 col-sm-6" do %>
        <%= render_search_bar %>
      <% end %>
      <%= content_tag :div, :class => "col-lg-4 col-md-5 col-sm-6" do %>
        <%= render :partial => "/user_util_links" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
