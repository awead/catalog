<%= content_tag :div, :class => "row", :id => "search_banner" do %>
  <%= content_tag :div, :class => "col-lg-9 col-md-8 col-sm-7" do %>
    <%= form_tag search_action_url, :method => :get do %>
      
      <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8)) %>

      <%= content_tag :div, :class => "input-group" do %>
        <% unless search_fields.empty? %>
          <%= content_tag :span, :class => "input-group-addon" do %>
            <%= content_tag :label, t("blacklight.search.form.search_field.label"), :for => "search_field", :class => "sr-only" %>
            <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), 
                :title => t("blacklight.search.form.search_field.title"), :class=>"search_field") %>
            <%= content_tag :span, t("blacklight.search.form.search_field.post_label"), :class => "sr-only" %>
          <% end %>
        <% end %>
        <%= content_tag :label, t("blacklight.search.form.q"), :for => "q", :class => "sr-only" %>
        <%= text_field_tag :q, params[:q], :placeholder => t("blacklight.search.form.q"), 
            :class => "search_q q form-control", :id => "q", :autofocus => should_autofocus_on_search_box? %>
        <%= content_tag :span, :class => "input-group-btn" do %>
          <%= content_tag :button, :type => "submit", :class => "btn btn-primary search-btn", :id => "search" do %>
            <%= content_tag :span, nil, :class => "glyphicon glyphicon-search" %>
          <% end %>
        <% end %>
      <% end %>
    
    <% end %>
  <% end %>

  <%= content_tag :div, :class => "col-lg-3 col-md-4 col-sm-5" do %>
    <%= content_tag :span, :class => "block" do %>
      <%= link_to t("more_options"), advanced_search_path, :class => "btn btn-primary search-btn" %>
      <%= render_front_page_account_tools %>
    <% end %>
  <% end %>
<% end %>
