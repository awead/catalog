<%= content_tag :h1, t("devise.passwords.new.heading") %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form form-horizontal" }) do |f| %>
  
  <%= render_error_messages %>

  <%= content_tag :div, :class => "control-group" do %>
    <%= f.label :email, :class => "control-label" %>
    <%= content_tag :div, :class => "controls" do %>
      <%= f.email_field :email, :autofocus => true %>
    <% end %>
  <% end %>

  <%= content_tag :div, :class => "control-group" do %>
    <%= content_tag :div, :class => "controls" do %>
      <%= f.submit t("devise.passwords.new.submit"), :class => "btn" %>
    <% end %>
  <% end %>

<% end %>
