<%= content_tag :div, :class => "col-sm-12" do %>

  <%= content_tag :h1, t("devise.passwords.new.heading") %>
  
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>  
    <%= render_error_messages %>
    <%= content_tag :div, :class => "form-group" do %>
      <%= f.label :email, :class => "col-sm-2 control-label" %>
      <%= content_tag :div, :class => "col-sm-5" do %>
        <%= f.email_field :email, :class => "form-control", :autofocus => true %>
      <% end %>
    <% end %>
    <%= f.submit t("devise.passwords.new.submit"), :class => "btn btn-primary" %>
  <% end %>

<% end %>
