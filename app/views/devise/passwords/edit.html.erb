<%= content_tag :h1, t("devise.passwords.edit.heading") %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form form-horizontal" }) do |f| %>
  
  <%= render_error_messages %>
  
  <%= f.hidden_field :reset_password_token %>

  <%= content_tag :div, :class => "control-group" do %>
    <%= f.label :password, :class => "control-label" %>
    <%= content_tag :div, :class => "controls" do %>
      <%= f.password_field :password, :autocomplete => "off" %>
    <% end %>
  <% end %>

  <%= content_tag :div, :class => "control-group" do %>
    <%= f.label :password_confirmation, :class => "control-label" %>
    <%= content_tag :div, :class => "controls" do %>
      <%= f.password_field :password_confirmation, :autocomplete => "off" %>
    <% end %>
  <% end %>

  <%= content_tag :div, :class => "control-group" do %>
    <%= content_tag :div, :class => "controls" do %>
      <%= f.submit t("devise.passwords.edit.submit"), :class => "btn" %>
    <% end %>
  <% end %>

<% end %>
