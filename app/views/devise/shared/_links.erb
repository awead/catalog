<%= content_tag :li, nil, :class => "divider" %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= content_tag :li, link_to("Sign up", new_registration_path(resource_name)) %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= content_tag :li, link_to("Forgot your password?", new_password_path(resource_name)) %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= content_tag :li, link_to("Didn't receive confirmation instructions?", new_confirmation_path(resource_name)) %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= content_tag :li, link_to("Didn't receive unlock instructions?", new_unlock_path(resource_name)) %>
<% end %>
