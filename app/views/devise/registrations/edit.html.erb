<%= content_tag :h1, t("devise.edit.heading") %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>

  <%= render_error_messages %>
  <%= render_waiting_on_confirmation %>

  <%= content_tag :fieldset do %>

    <%= content_tag :legend, t("devise.edit.email_legend") %>

    <%= content_tag :div, :class => "control-group" do %>
      <%= f.label :email, :class => "control-label" %>
      <%= content_tag :div, :class => "controls" do %>
        <%= f.email_field :email, :autofocus => true %>
      <% end %>
    <% end %>

  <% end %>

  <%= content_tag :fieldset do %>

    <%= content_tag :legend, t("devise.edit.password_legend") %>
    <%= content_tag :p, t("devise.edit.password_description") %>

    <%= content_tag :div, :class => "control-group" do %>
      <%= f.label :password, :class => "control-label" %>
      <%= content_tag :div, :class => "controls" do %>
        <%= f.password_field :password, :autocomplete => "off" %>
      <% end %>
    <% end %>

    <%= content_tag :div, :class => "control-group" do %>
      <%= f.label :password_confirmation, :class => "control-label" %>
      <%= content_tag :div, :class => "controls" do %>
        <%= f.password_field :password_confirmation, :autocomplete => "off" %>
      <% end %>
    <% end %>

  <% end %>

  <%= content_tag :fieldset do %>

    <%= content_tag :legend, t("devise.edit.confirmation_legend")%>
    <%= content_tag :p, t("devise.edit.confirmation_description") %>

    <%= content_tag :div, :class => "control-group" do %>
      <%= f.label :current_password, :class => "control-label" %>
      <%= content_tag :div, :class => "controls" do %>
        <%= f.password_field :current_password, :autocomplete => "off" %>
      <% end %>
    <% end %>

    <%= content_tag :div, :class => "control-group" do %>
      <%= content_tag :div, :class => "controls" do %>
        <%= f.submit t("devise.edit.submit"), :class => "btn" %>
      <% end %>
    <% end %>

  <% end %>

<% end %>
